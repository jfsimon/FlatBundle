<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="besimple_flat.component_cache.class">BeSimple\FlatBundle\Component\ComponentCache</parameter>
        <parameter key="besimple_flat.component_manager.class">BeSimple\FlatBundle\Component\ComponentManager
        </parameter>
    </parameters>

    <services>
        <service id="besimple_flat.component_cache" class="%besimple_flat.component_cache.class%">
            <argument>%besimple_flat.config.cache_dir%</argument>
        </service>
        <service id="besimple_flat.component_persister" class="%besimple_flat.component_persister.class%">
            <argument type="service" id="kernel"/>
            <argument type="service" id="besimple_flat.component_persister"/>
            <argument type="service" id="besimple_flat.component_cache"/>
            <argument>%besimple_flat.config.default_component_namespace%</argument>
        </service>
    </services>

</container>
